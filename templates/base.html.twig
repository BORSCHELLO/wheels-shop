<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>{% block title %}Wheels-shop{% endblock %}</title>
        {% block stylesheets %}
            <link href="/css/bootstrap.min.css" rel="stylesheet">
            <link href="/css/font-awesome.min.css" rel="stylesheet">
            <link href="/css/prettyPhoto.css" rel="stylesheet">
            <link href="/css/price-range.css" rel="stylesheet">
            <link href="/css/animate.css" rel="stylesheet">
            <link href="/css/main.css" rel="stylesheet">
            <link href="/css/responsive.css" rel="stylesheet">

            <link rel="shortcut icon" href="/images/ico/favicon.ico">
            <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/images/ico/apple-touch-icon-144-precomposed.png">
            <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/images/ico/apple-touch-icon-114-precomposed.png">
            <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/images/ico/apple-touch-icon-72-precomposed.png">
            <link rel="apple-touch-icon-precomposed" href="/images/ico/apple-touch-icon-57-precomposed.png">
        {% endblock %}
        <!--[if lt IE 9]>
        <script src="js/html5shiv.js"></script>
        <script src="js/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
    {% block header%}
        <header id="header"><!--header-->
            <div class="header-middle"><!--header-middle-->
                <div class="container">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="logo pull-left">
                                <a href="{{ path('home')}}"><img src="/images/home/logo.png" alt="" /></a>
                            </div>

                        </div>
                        <div class="col-sm-8">
                            <div class="shop-menu pull-right">
                                <ul class="nav navbar-nav">
                                    {% block cart %}<li><a href="{{ path('cart')}}"><i class="fa fa-shopping-cart"></i>Корзина</a></li>{% endblock %}
                                    {% block authReg %}<li><a href="{{ path('login')}}"><i class="fa fa-lock"></i>Авторизация/Регистрация</a></li>{% endblock %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!--/header-middle-->

            <div class="header-bottom"><!--header-bottom-->
                <div class="container">
                    <div class="row">
                        <div class="col-sm-9">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
                            <div class="mainmenu pull-left">
                                <ul class="nav navbar-nav collapse navbar-collapse">
                                    {% block main %}<li><a id="main-page" href="{{ path('home')}}">Главная</a></li>{% endblock %}
                                    {% block shop %}<li><a id="shop-page" href="{{path('shop/page', {'page': 1}) }}">Магазин</a></li>{% endblock %}
                                    {% block contacts %}<li><a id="contact-page" href="{{ path('contacts')}}">Контакты</a></li>{% endblock %}
                                </ul>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="search_box pull-right">
                                <input type="text" placeholder="Поиск"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!--/header-bottom-->
        </header><!--/header-->
    {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="js/jquery.js"></script>
            <script src="js/price-range.js"></script>
            <script src="js/jquery.scrollUp.min.js"></script>
            <script src="js/bootstrap.min.js"></script>
            <script src="js/jquery.prettyPhoto.js"></script>
            <script src="js/main.js"></script>
        {% endblock %}
    </body>
</html>
