{% extends"base.html.twig" %}
{% block title %}Корзина | Wheels-shop{% endblock %}
{% block cart %}<li><a href="{{ path('cart')}}" class="active"><i class="fa fa-shopping-cart"></i>Корзина</a></li>{% endblock %}
{% block body %}
	<section id="cart_items">
		<div class="container">
			{% if app.user %}

			{% else %}
			<div class="checkout-options">
						<h3>Вы можете продолжить как Гость или Зарегистрироваться, если Вы зарегистрированы, можете авторизаваться:</h3>
						<a class="btn btn-primary" href="{{ path('user_registration')}}">Регистрация</a>
						<a class="btn btn-primary" href="{{ path('app_login')}}">Авторизация</a>
			</div></br><!--/checkout-options-->
			{% endif %}
			<div class="shopper-informations">
				<div class="row">
					<div class="col-sm-3">
						<div class="shopper-info">
							<p>Информация о покупателе</p>
							<form>
							{% if app.user %}
								<input type="text" id="firstname" placeholder="Имя" value="{{ userInfo.firstname }}">
								<input type="text" id="lastname" placeholder="Фамилия" value="{{ userInfo.lastname }}">
								<input type="text" id="address" placeholder="Адрес доставки" value="{{ userInfo.address }}">
								<input type="number" id="postalCode" placeholder="Индекс" value="{{ userInfo.postalCode }}">
								<input type="tel" id="phone" placeholder="Телефон" value="{{ userInfo.phone }}">
							{% else %}
								<input type="text" id="firstname" placeholder="Имя" value="">
								<input type="text" id="lastname" placeholder="Фамилия" value="">
								<input type="text" id="address" placeholder="Адрес доставки" value="">
								<input type="number" id="postalCode" placeholder="Индекс" value="">
								<input type="tel" id="phone" placeholder="Телефон" value="">
							{% endif %}
							</form>
						</div>
					</div>
					<div class="col-sm-4">
						<div class="order-message">
							<p>Примечание к заказу</p>
							<textarea name="message"  placeholder="Примечания к Вашему заказу" rows="16"></textarea>
						</div>
					</div>

					<div class="col-sm-4">
						<div class="order-message">
							<p>Доставка и оплата заказа</p>
							<p>Доставка</p>
							<span>
						<label><input id="pickup" type="checkbox"> Самовывоз</label>
					</span>
							<span>
						<label><input id="courierDelivery" type="checkbox"> Доставка курьером</label>
					</span>
							<p>Оплата</p>
							<span>
						<label><input id="cash" type="checkbox"> Наличными при приеме заказа</label>
					</span>
							<span>
						<label><input id="card" type="checkbox"> Картой при приеме заказа</label>
					</span>
						</div>
					</div>
				</div>
			</div>

			<!--/Корзина-->
			<div class="table-responsive cart_info">
				<table class="table table-condensed">
					<thead>
					<tr class="cart_menu">
						<td class="image">Фото</td>
						<td class="description">Информация</td>
						<td class="prices">Цена</td>
						<td class="quantity">Количество</td>
						<td class="total">Стоимость</td>
						<td></td>
					</tr>
					</thead>
					<tbody>
					{% if app.user %}
					{% for item in items%}
					<tr id="cart-item-{{ item.id }}">
						<td class="cart_product">
							<a href=""><img src="{{ asset("images/shop/#{ item.tire.images[0].source }") | imagine_filter('cartItem') }}" alt=""/></a>
						</td>
						<td class="cart_description">
							<h4><a href="{{ path('tire/details', {'id': item.tire.id}) }}">{{ item.tire.brand }}</h4>
							<p>{{ item.tire.name }}</p></a>
						</td>
						<td class="cart_price">
							<p id="price-item-{{ item.id }}">{{ item.tire.price }} p.</p>
						</td>
						<td class="cart_quantity">
							<div class="cart_quantity_button">
								<a id="{{ item.id }}" class="cart_quantity_down" href="#"> - </a>
								<input id="input-{{ item.id }}" class="cart_quantity_input" type="text" name="quantity" value="{{ item.quantity }}" autocomplete="off" size="2">
								<a id="{{ item.id }}" class="cart_quantity_up" href="#"> + </a>
							</div>
						</td>
						<td class="cart_total">
							<p id="price-{{ item.id }}" class="cart_total_price">{{ item.tire.price * item.quantity }} p.</p>
						</td>
						<td  id="{{ item.id }}" class="cart_delete">
							<a class="cart_quantity_delete" href="#"><i class="fa fa-times"></i></a>
						</td>
					</tr>
					{% endfor %}
					{% else %}
						{% for tire in tires%}
							<tr id="cart-item-{{ tire.id }}">
								<td class="cart_product">
									<a href=""><img src="{{ asset("images/shop/#{ tire.images[0].source }") | imagine_filter('cartItem') }}" alt=""/></a>
								</td>
								<td class="cart_description">
									<h4><a href="{{ path('tire/details', {'id': tire.id}) }}">{{ tire.brand }}</h4>
									<p>{{ tire.name }}</p></a>
								</td>
								<td class="cart_price">
									<p id="price-item-{{ tire.id }}">{{ tire.price }} p.</p>
								</td>
								<td class="cart_quantity">
									<div class="cart_quantity_button">
										<a id="{{ tire.id }}" class="cart_quantity_down" href="#"> - </a>
										<input id="input-{{ tire.id }}" class="cart_quantity_input" type="text" name="quantity" value="{{ quantity[tire.id]  }}" autocomplete="off" size="2">
										<a id="{{ tire.id }}" class="cart_quantity_up" href="#"> + </a>
									</div>
								</td>
								<td class="cart_total">
									<p id="price-{{ tire.id }}" class="cart_total_price">{{ tire.price * quantity[tire.id] }} p.</p>
								</td>
								<td  id="{{ tire.id }}" class="cart_delete">
									<a class="cart_quantity_delete" href="#"><i class="fa fa-times"></i></a>
								</td>
							</tr>
						{% endfor %}
					{% endif %}
					<tr>
						<td colspan="4">&nbsp;</td>
						<td colspan="2">
							{% if app.user %}
							<table class="table table-condensed total-result">
								<tr>
									<td>Стоимость товаров</td>
									<td><p id="total-price-order">{{ totalPrice }} p.</p></td>
								</tr>
								<tr>
									<td>Скидка</td>
									<td>
										{{ discount }} p.
									</td>
								</tr>
								<tr class="shipping-cost">
									<td>Доставка</td>
									<td>15 р.</td>
								</tr>
								<tr>
									<td>Итого</td>
									<td><span>{{ totalCost }} p.</span></td>
								</tr>
							</table>
							{% else %}
								<table class="table table-condensed total-result">
									<tr>
										<td>Стоимость товаров</td>
										<td><p id="total-price-order">{{ totalPrice }} p.</p></td>
									</tr>
									<tr>
										<td>Скидка</td>
										<td>
											{{ discount }} p.
										</td>
									</tr>
									<tr class="shipping-cost">
										<td>Доставка</td>
										<td>15 р.</td>
									</tr>
									<tr>
										<td>Итого</td>
										<td><span>{{ totalCost }} p.</span></td>
									</tr>
								</table>
							{% endif %}
							<a class="btn btn-primary" href="">Оформить заказ</a>
						</td>
					</tr>
					</tbody>
				</table>
			</div>
		</div>
	</section> <!--/#cart_items-->

{% endblock %}

	{% block javascripts %}
		<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
		<script src="js/jquery.js"></script>
		<script src="js/bootstrap.min.js"></script>
		<script src="js/jquery.scrollUp.min.js"></script>
		<script src="js/jquery.prettyPhoto.js"></script>
		<script src="js/main.js"></script>
		{% if app.user %}
		<script src="js/cart.js"></script>
		{% else %}
		<script src="js/cart-anonymous.js"></script>
		{% endif %}
	{% endblock %}